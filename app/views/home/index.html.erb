<div class="container">
  <div class="p-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Enter a URL to make it tiny</h5>
        <%= form_for @url, remote:true do |form|%>
        <%= form.text_field :long_url , class: "form-control", placeholder:"http://www.example.com"%>
        <%= form.submit "Create Link", class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
      <div id="short-url">
      </div>
    </div>
  </div>
</div>

